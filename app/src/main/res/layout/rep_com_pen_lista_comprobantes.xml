<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imgComAbrir"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_desplegar"
                    android:layout_gravity="center"
                    />

                <ImageView
                    android:id="@+id/imgComCerrar"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_ocultar"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/tvComPeriodo"
                    android:layout_width="120dp"
                    android:text="20"
                    style="@style/textoTablaDesplegable"
                    />

                <TextView
                    android:id="@+id/tvComConcepto"
                    android:layout_width="200dp"
                    android:text="1500"
                    android:gravity="left"
                    style="@style/textoTablaDesplegable"
                    />

                <TextView
                    android:id="@+id/tvComExenta"
                    android:layout_width="130dp"
                    android:text="75%"
                    android:gravity="right"
                    style="@style/textoTablaDesplegable"
                    />

                <TextView
                    android:id="@+id/tvComGravada"
                    android:layout_width="130dp"
                    android:text="70%"
                    android:gravity="right"
                    style="@style/textoTablaDesplegable"
                    />

                <TextView
                    android:id="@+id/tvComIva"
                    android:layout_width="130dp"
                    android:text="500.000"
                    android:gravity="right"
                    style="@style/textoTablaDesplegable"
                    />

                <TextView
                    android:id="@+id/tvComMonto"
                    android:layout_width="130dp"
                    android:text="500.000"
                    android:gravity="right"
                    style="@style/textoTablaDesplegable"
                    />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llCompSubCabecera"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:visibility="gone"
            android:background="#000">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="Fec. Comprobante"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:background="#cc85C229"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:textSize="10dp"
                    android:padding="10dp"/>

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Observacion"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:background="#cc85C229"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textAlignment="textStart"
                    android:layout_marginTop="10dp"
                    android:textSize="10dp"
                    android:padding="10dp"/>

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="Descripcion"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:background="#cc85C229"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textAlignment="textStart"
                    android:layout_marginTop="10dp"
                    android:textSize="10dp"
                    android:padding="10dp"/>

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Exenta"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:background="#cc85C229"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textAlignment="textEnd"
                    android:layout_marginTop="10dp"
                    android:textSize="10dp"
                    android:padding="10dp"/>

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Gravada"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:background="#cc85C229"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textAlignment="textEnd"
                    android:layout_marginTop="10dp"
                    android:textSize="10dp"
                    android:padding="10dp"/>

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="IVA"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:background="#cc85C229"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textAlignment="textEnd"
                    android:layout_marginTop="10dp"
                    android:textSize="10dp"
                    android:padding="10dp"/>

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Total"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:background="#cc85C229"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textAlignment="textEnd"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:textSize="10dp"
                    android:padding="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#000">
                <ListView
                    android:id="@+id/lvSubComprobantesPendientes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawSelectorOnTop="false"
                    android:nestedScrollingEnabled="true"
                    android:visibility="gone"
                    android:layout_marginLeft="30dp"
                    android:layout_marginBottom="10dp"
                    />
        </LinearLayout>

</GridLayout>