<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imgAbrir"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_desplegar"
                    />

                <ImageView
                    android:id="@+id/imgCerrar"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_ocultar"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/tvCanCliCodigo"
                    android:layout_width="40dp"
                    android:text="20"
                    android:gravity="right"
                    style="@style/textoTablaDesplegable"
                    />

                <TextView
                    android:id="@+id/tvCanCliDescripcion"
                    android:layout_width="250dp"
                    android:text="1500"
                    android:gravity="left"
                    style="@style/textoTablaDesplegable"
                    />

                <TextView
                    android:id="@+id/tvCanCliValorDeLaCanasta"
                    android:layout_width="130dp"
                    android:text="75%"
                    android:gravity="right"
                    style="@style/textoTablaDesplegable"
                    />

                <TextView
                    android:id="@+id/tvCanCliVentas"
                    android:layout_width="120dp"
                    android:text="70%"
                    android:gravity="right"
                    style="@style/textoTablaDesplegable"
                    />

                <TextView
                    android:id="@+id/tvCanCliMetas"
                    android:layout_width="120dp"
                    android:text="500.000"
                    android:gravity="right"
                    style="@style/textoTablaDesplegable"
                    />

                <TextView
                    android:id="@+id/tvCanCliPorcCump"
                    android:layout_width="120dp"
                    android:text="500.000"
                    android:gravity="right"
                    style="@style/textoTablaDesplegable"
                    />

                <TextView
                    android:id="@+id/tvCanCliTotalPercibir"
                    android:layout_width="120dp"
                    android:text="500.000"
                    android:gravity="right"
                    style="@style/textoTablaDesplegable"
                    />
        </LinearLayout>

        <ListView
            android:id="@+id/lvSubCanastaDeMarcas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawSelectorOnTop="false"
            android:nestedScrollingEnabled="true"
            android:visibility="gone"

            />

</GridLayout>